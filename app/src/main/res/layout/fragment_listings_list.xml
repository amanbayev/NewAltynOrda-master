
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.kz.growit.collapstoolbar.TeamWork.Activities.TListingsActivityFragment"
tools:showIn="@layout/activity_tlistings">

<com.rey.material.widget.ProgressView
    android:id="@+id/progressTListingsFragment"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    app:cpd_strokeColor="#338599"
    app:pv_autostart="false"
    app:pv_circular="true"
    app:pv_progressMode="indeterminate"
    app:pv_progressStyle="@style/Material.Drawable.CircularProgress" />

<android.support.v7.widget.RecyclerView
    android:id="@+id/myListingsRV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</RelativeLayout>
